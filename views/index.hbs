<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Risky Price Logger</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.0/font/bootstrap-icons.css"
    />
  </head>
  <body>
    <div class="container">
      <header class="pb-3 pt-3 mb-3 border-bottom">
        <div class="d-flex flex-wrap align-items-center justify-content-end">
          <div class="col-3">
            <span class="navbar-brand" href="#">Risky Price Logger</span>
          </div>
          <div class="col-9">
            <div class="input-group">
              <input
                type="text"
                class="form-control"
                placeholder="Product URL"
              />
              <button
                class="btn btn-outline-secondary"
                type="button"
                id="button-addon2"
              >
                Follow price!
              </button>
            </div>
          </div>
        </div>
      </header>
      <div>
        <table class="table table-striped table-hover align-middle">
          <thead>
            <tr>
              <th>Product</th>
              <th></th>
              <th>Price</th>
              <th>Previously</th>
            </tr>
          </thead>
          <tbody>
            {{!-- <tr>
              <td class="col-1">
                <img
                  src="https://www.riskmadeinwarsaw.com/images/detailed/136/2i0a7912_ecomm.jpg"
                  class="rounded"
                  alt="..."
                  style="width: 50px"
                />
              </td>
              <td class="col-7 h5">
                Pure Blis Long Sleeve Art blue &nbsp;
                  <a href="#" class="text-decoration-none">
                    <i class="bi bi-link-45deg"></i>
                  </a>
                </div>
              </td>
              <td>
                <h5>
                  <span class="badge bg-success">2137.69 PLN &nbsp;
                      <span class="badge bg-light text-dark">-24%
                      </span>
                  </span>
                </h5>
              </td>
              <td>
                <h5>
                  <span class="badge bg-secondary"><del>420.99 PLN</del> &nbsp;
                      <span class="badge bg-light text-dark"> 23-04-2021
                      </span>
                  </span>
                </h5>
              </td>
            </tr> --}}
            {{!-- ITEM --}}
            {{#each prods}}
              <tr>
                <td class="col-1">
                  <img
                    src="{{ this.pictureUrl }}"
                    class="rounded"
                    alt="..."
                    style="width: 50px"
                  />
                </td>
                <td class="col-7 h5">
                  {{ this.name }} &nbsp;
                    <a href="{{ this.url }}" class="text-decoration-none">
                      <i class="bi bi-link-45deg"></i>
                    </a>
                  </div>
                </td>
                <td>
                  <h5>
                    <span class="badge bg-success">{{ this.currentPriceReadable }} &nbsp;PLN
                        {{#if this.previousPriceReadable}}
                          <span class="badge bg-light text-dark">{{ this.discountPerc }}
                          </span>
                        {{/if}}
                    </span>
                  </h5>
                </td>
                <td>
                  <h5>
                    {{#if this.previousPriceReadable}}
                      <span class="badge bg-secondary"><del>{{ this.previousPriceReadable }}</del> &nbsp;
                          <span class="badge bg-light text-dark">{{ this.priceChangeDate }}
                          </span>
                      </span>
                    {{else}}
                      <span class="badge bg-secondary">No price change
                      </span>
                    {{/if}}
                  </h5>
                </td>
              </tr>
            {{/each}}
            {{!-- END ITEM --}}
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
